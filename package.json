    "dayjs": "^1.11.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "got": "^12.4.1",
    "http-status-codes": "^2.2.0",
    "inversify": "^6.0.1",
    "jose": "^4.10.3",
    "mime-types": "^2.1.35",
    "mongoose": "^6.6.1",
    "multer": "^1.4.4",
    "nanoid": "^3.3.4",
    "nodemon": "^2.0.16",
    "pino": "^8.5.0",
    "reflect-metadata": "^0.1.13"
